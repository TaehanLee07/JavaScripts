<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        document.write("<h1> 문자 치환 </h1>")
        let theText1 = "img2_out.jpg"
        document.write(theText1 + "<br>")
        theText1 = theText1.replace("out.jpg", "in.jpg")
        document.write(theText1 + "<br>")

        document.write("<h1>문자 분할 및 추출</h1>")
        let theText2 = "images/img10.jpg"
        document.write(theText2 + "<br>")
        theText2 = theText2.split("/")[1]
        // /를 기준을 ㅗ2개로 분한됨 images image.jpg
        // [0] images [1] images.jpg
        document.write(theText2 + "<br>")
        theText2 = theText2.substring(3)
        document.write(theText2 + "<br>")
        theText2 = parseInt(theText2)
        document.write(theText2 + "<br>")

        // 10.0 = 10
        // 11 > 11
        // 10.jpg > 10
        // img10 > error

        document.write("<h1>마지막 문자추출</h1>")
        let theText3 = "hello javascript & jquery"
        let theText3L = theText3.length
        document.write(theText3.charAt(15) + "<br>")
        let lastindex = theText3.length - 1
        theText3 = theText3.charAt(lastindex)
        document.write(theText3)

    </script>
</head>

